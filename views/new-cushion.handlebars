<h1>Create a new cushion here!</h1>

<div class="container">
 
<div class="chart" id="chart" style="width:100%; height:400px;"></div>

  <div>
  {{#each cushions}}
    <p>{{this.scanner_number}}</p>
    <p>{{this.facility_location}}</p>
  {{/each}}
  </div>

<div>
  {{#each facilities}}
    <p>{{this.location}}</p>
  {{/each}}
</div>
 
  <div class="row">
    <div class="col-md-6">
      <div class="input-group">
        <span class="input-group-addon">@</span>
        <input type="text" class="form-control cushion" id="scan-number" placeholder="Scanner Number"  aria-describedby="sizing-addon2">
      </div>
      <div class="input-group">
        <span class="input-group-addon">@</span>
        <input type="text" class="form-control cushion"  id="location" placeholder="Facility Location"  aria-describedby="sizing-addon2">
      </div>
      <button type="button" class="btn btn-primary submit">Add Cushion</button>

      <div class="input-group">
        <span class="input-group-addon">@</span>
        <input type="text" class="form-control edit" id="edit-scan-number" placeholder="Scanner Number"  aria-describedby="sizing-addon2">
      </div>
      <button type="button" class="btn btn-primary update">Update Cushion</button>

    </div>
  </div>
</div>
